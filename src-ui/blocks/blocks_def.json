{
  "Programming": {
    "id": "programming",
    "blocks": {
      "variable_declaration": {
        "title": "Set Variable",
        "arg": [
          { "name": "varName", "type": "str", "value": "x" },
          { "name": "value", "type": "num", "value": "0" }
        ]
      },
      "variable_get": {
        "title": "Get Variable",
        "arg": [{ "name": "varName", "type": "str", "value": "x" }]
      },
      "number": {
        "title": "Number",
        "arg": [{ "name": "num", "type": "num", "value": "0" }]
      },
      "math_operation": {
        "title": "Math Operation",
        "arg": [
          { "name": "A", "type": "num", "value": "1" },
          {
            "name": "OP",
            "type": "dropdown",
            "options": ["ADD", "SUBTRACT", "MULTIPLY", "DIVIDE"]
          },
          { "name": "B", "type": "num", "value": "1" }
        ]
      },
      "comparison": {
        "title": "Compare",
        "arg": [
          { "name": "A", "type": "num", "value": "1" },
          {
            "name": "OP",
            "type": "dropdown",
            "options": ["EQ", "NEQ", "GT", "LT", "GTE", "LTE"]
          },
          { "name": "B", "type": "num", "value": "1" }
        ]
      },
      "for_loop": {
        "title": "For Loop",
        "arg": [
          { "name": "varName", "type": "str", "value": "i" },
          { "name": "from", "type": "num", "value": "0" },
          { "name": "to", "type": "num", "value": "10" },
          { "name": "step", "type": "num", "value": "1" }
        ]
      },
      "if_statement": {
        "title": "If Statement",
        "arg": [{ "name": "condition", "type": "bool", "value": "true" }]
      }
    }
  },
  "Wire Mesh": {
    "id": "wire_mesh",
    "blocks": {
      "generate_wire_mesh": {
        "title": "Generate Wire Mesh",
        "isStatementBlock": true,
        "arg": [
          {
            "name": "h_count",
            "type": "num",
            "value": "10"
          },
          {
            "name": "v_count",
            "type": "num",
            "value": "10"
          },
          {
            "name": "use_tubes",
            "type": "bool",
            "value": "false"
          },
          {
            "name": "tube_thickness",
            "type": "num",
            "value": "0.5"
          }
        ]
      },
      "export_wire_csv": {
        "title": "Export Wire CSV",
        "arg": [
          {
            "name": "filename",
            "type": "str",
            "value": "wire_mesh"
          }
        ]
      },
      "initialize_wire_mesh": { 
        "title": "Initialize Wire Mesh", 
        "arg": [] 
      },
      "add_horizontal_wire": {
        "title": "Add Horizontal Wire",
        "arg": [
          { "name": "position", "type": "num", "value": "0" },
          { "name": "thickness", "type": "num", "value": "0.5" },
          { "name": "color", "type": "color", "value": "#ff0000" }
        ]
      },
      "add_vertical_wire": {
        "title": "Add Vertical Wire",
        "arg": [
          { "name": "position", "type": "num", "value": "0" },
          { "name": "thickness", "type": "num", "value": "0.5" },
          { "name": "color", "type": "color", "value": "#00ff00" }
        ]
      },
      "convert_to_tubes": {
        "title": "Convert to Tubes",
        "arg": [{ "name": "thickness", "type": "num", "value": "0.5" }]
      },
      "collect_wire_mesh": {
        "title": "Collect Wire Mesh",
        "arg": []
      },
      "export_component_wire_csv": {
        "title": "Export Wire Mesh CSV",
        "arg": [
          { "name": "filename", "type": "str", "value": "component_wire_mesh" }
        ]
      }
    }
  },
"3D Model": {
  "id": "model_3d",
  "blocks": {
    "load_stl": {
      "title": "Load STL",
      "arg": [
        {
          "name": "filename",
          "type": "str",
          "value": "default.stl"
        }
      ]
    },
    "upload_stl": {
      "title": "Upload STL",
      "arg": []
    },
    "create_cube": {
      "title": "Create Cube",
      "arg": [
        {
          "name": "size",
          "type": "num",
          "value": "50"
        }
      ]
    },
    "create_sphere": {
      "title": "Create Sphere",
      "arg": [
        {
          "name": "radius",
          "type": "num",
          "value": "25"
        }
      ]
    },
    "calculate_bounds": {
      "title": "Calculate Object Bounds",
      "arg": []
    },
    "generate_contour": {
      "title": "Generate Contour",
      "isStatementBlock": true,
      "arg": [
        { "name": "height", "type": "num", "value": "0" },
        { "name": "concavity", "type": "num", "value": "20" }
      ]
    },
    "calculate_intersection": {
      "title": "Calculate Intersection",
      "isStatementBlock": true,
      "arg": [
        { 
          "name": "planeAxis", 
          "type": "dropdown", 
          "options": ["X", "Y", "Z"],
          "value": "Y"
        },
        { "name": "planeValue", "type": "num", "value": "0" }
      ]
    }
  }
},
"Transforms": {
  "id": "transforms",
  "blocks": {
    "rotate_model": {
      "title": "Rotate Model",
      "arg": [
        {
          "name": "rotate_x",
          "type": "num",
          "value": "0"
        },
        {
          "name": "rotate_y",
          "type": "num",
          "value": "0"
        },
        {
          "name": "rotate_z",
          "type": "num",
          "value": "0"
        }
      ]
    },
    "scale_model": {
      "title": "Scale Model",
      "arg": [
        {
          "name": "scale",
          "type": "num",
          "value": "1"
        }
      ]
    },
    "translate_model": {
      "title": "Translate Model",
      "arg": [
        {
          "name": "translate_x",
          "type": "num",
          "value": "0"
        },
        {
          "name": "translate_y",
          "type": "num",
          "value": "0"
        },
        {
          "name": "translate_z",
          "type": "num",
          "value": "0"
        }
      ]
    },
    "create_custom_control": {
      "title": "Create Custom Control",
      "arg": [
        { "name": "label", "type": "str", "value": "My Control" },
        { 
          "name": "controlType", 
          "type": "dropdown", 
          "options": ["SLIDER", "NUMBER", "CHECKBOX"],
          "value": "SLIDER"
        },
        { "name": "initialValue", "type": "num", "value": "0" },
        { "name": "varName", "type": "str", "value": "control_value" }
      ]
    }
  }
},
"Visualization": {
  "id": "visualization",
  "blocks": {
    "show_in_viewer": {
      "title": "Show in 3D Viewer",
      "isStatementBlock": true,
      "arg": []
    },
    "clear_scene": {
      "title": "Clear Scene",
      "arg": []
    },
    "apply_material": {
      "title": "Apply Material",
      "isStatementBlock": true,
      "arg": [
        { 
          "name": "materialType", 
          "type": "dropdown", 
          "options": ["STANDARD", "NORMAL", "WIREFRAME", "PHONG"],
          "value": "STANDARD"
        },
        { "name": "color", "type": "color", "value": "#dddddd" }
      ]
    },
    "show_object_dimensions": {
      "title": "Show Object Dimensions",
      "isStatementBlock": true,
      "arg": []
    },
    "add_helper_object": {
      "title": "Add Helper Object",
      "isStatementBlock": true,
      "arg": [
        { 
          "name": "helperType", 
          "type": "dropdown", 
          "options": ["BOUNDING_BOX", "GRID", "AXES", "EDGE_LINES"],
          "value": "BOUNDING_BOX"
        },
        { "name": "color", "type": "color", "value": "#00ff00" }
      ]
    }
  }
},
  "Stacked Layers": {
    "id": "stacked_layers",
    "blocks": {
      "generate_stacked_layers": {
        "title": "Generate Stacked Layers",
        "isStatementBlock": true,
        "arg": [
          {
            "name": "material_thickness",
            "type": "num",
            "value": "3"
          },
          {
            "name": "layer_count",
            "type": "num",
            "value": "10"
          }
        ]
      },
      "export_stacked_layers_svg": {
        "title": "Export Stacked Layers SVG",
        "arg": [
          {
            "name": "filename",
            "type": "str",
            "value": "stacked_layer"
          }
        ]
      }
    }
  }
}