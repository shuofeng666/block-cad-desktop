{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:1234",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "block-cad-desktop",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true, 
        "open": true,  
        "save": true  
      },
      "shell": {
        "all": true,
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "run-openscad",
            "cmd": "/Applications/OpenSCAD.app/Contents/MacOS/OpenSCAD",
            "args": [{ "validator": "\\S+" }, "-o", { "validator": "\\S+" }]
          }
        ]
        
      },"os": {
        "all": true 
      },
      "fs": {
        "all": true, 
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$APP/*", "$DESKTOP/*","%TEMP/*"]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Block CAD",
        "width": 1000,
        "height": 600
      }
    ]
  }
}
