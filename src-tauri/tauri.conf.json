{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:1234",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Block CAD",
    "version": "0.0.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true, 
        "open": true,  
        "save": true  
      },
      "os": {
        "all": true 
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.blockly.cad.xyz",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Block CAD",
        "width": 1000,
        "height": 600
      }
    ]
  }
}
